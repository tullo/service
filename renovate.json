{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchPackageNames": [
        "github.com/go-playground/validator/v10"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "automerge": true,
  "automergeType": "branch",
  "ignoreTests": false,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "constraints": {
    "go": "1.25"
  }
}
